# ===============================================
# STELLAR CREDIT - AMBIENTE DE HOMOLOGAÇÃO
# ===============================================

# === CONFIGURAÇÕES GERAIS ===
NODE_ENV=staging
PORT=3001
FRONTEND_URL=https://stellar-credit-homolog.vercel.app

# === STELLAR NETWORK ===
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# === STELLAR ADMIN ACCOUNT ===
ADMIN_SECRET_KEY=${ADMIN_SECRET_KEY}
ADMIN_PUBLIC_KEY=${ADMIN_PUBLIC_KEY}

# === SMART CONTRACT ===
CONTRACT_ADDRESS=${CONTRACT_ADDRESS}
CONTRACT_WASM_HASH=${CONTRACT_WASM_HASH}

# === AI SERVICE ===
AI_SERVICE_URL=https://stellar-credit-ai-homolog.herokuapp.com
AI_SERVICE_TIMEOUT=30000

# === DATABASE ===
DATABASE_URL=postgresql://user:pass@localhost:5432/stellar_credit_homolog
DATABASE_POOL_SIZE=20

# === SECURITY ===
JWT_SECRET=${JWT_SECRET_HOMOLOG}
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# === RATE LIMITING ===
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=500

# === LOGGING ===
LOG_LEVEL=info
LOG_FORMAT=combined

# === EXTERNAL SERVICES ===
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINMARKETCAP_API_KEY=${COINMARKETCAP_API_KEY}

# === MONITORING ===
SENTRY_DSN=${SENTRY_DSN_HOMOLOG}

# === DEVELOPMENT TOOLS ===
DEBUG_MODE=false
MOCK_DATA_ENABLED=false
SWAGGER_ENABLED=true

# === CORS CONFIGURATION ===
CORS_ORIGIN=https://stellar-credit-homolog.vercel.app

# === CACHE ===
REDIS_URL=${REDIS_URL_HOMOLOG}
CACHE_TTL=1800
