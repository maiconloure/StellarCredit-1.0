# ===============================================
# STELLAR CREDIT - AMBIENTE DE PRODUÇÃO
# ===============================================

# === CONFIGURAÇÕES GERAIS ===
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://stellarcredit.com

# === STELLAR NETWORK ===
STELLAR_NETWORK=mainnet
STELLAR_HORIZON_URL=https://horizon.stellar.org

# === STELLAR ADMIN ACCOUNT ===
ADMIN_SECRET_KEY=${ADMIN_SECRET_KEY_PROD}
ADMIN_PUBLIC_KEY=${ADMIN_PUBLIC_KEY_PROD}

# === SMART CONTRACT ===
CONTRACT_ADDRESS=${CONTRACT_ADDRESS_PROD}
CONTRACT_WASM_HASH=${CONTRACT_WASM_HASH_PROD}

# === AI SERVICE ===
AI_SERVICE_URL=https://stellar-credit-ai.herokuapp.com
AI_SERVICE_TIMEOUT=30000

# === DATABASE ===
DATABASE_URL=${DATABASE_URL_PROD}
DATABASE_POOL_SIZE=50

# === SECURITY ===
JWT_SECRET=${JWT_SECRET_PROD}
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# === RATE LIMITING ===
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# === LOGGING ===
LOG_LEVEL=info
LOG_FORMAT=combined

# === EXTERNAL SERVICES ===
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINMARKETCAP_API_KEY=${COINMARKETCAP_API_KEY}

# === MONITORING ===
SENTRY_DSN=${SENTRY_DSN_PROD}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# === WEBHOOK ENDPOINTS ===
WEBHOOK_SCORE_CALCULATED=${WEBHOOK_SCORE_CALCULATED}
WEBHOOK_LOAN_REQUESTED=${WEBHOOK_LOAN_REQUESTED}
WEBHOOK_LOAN_APPROVED=${WEBHOOK_LOAN_APPROVED}

# === DEVELOPMENT TOOLS ===
DEBUG_MODE=false
MOCK_DATA_ENABLED=false
SWAGGER_ENABLED=false

# === CORS CONFIGURATION ===
CORS_ORIGIN=https://stellarcredit.com

# === CACHE ===
REDIS_URL=${REDIS_URL_PROD}
CACHE_TTL=3600

# === EMAIL NOTIFICATIONS ===
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@stellarcredit.com
